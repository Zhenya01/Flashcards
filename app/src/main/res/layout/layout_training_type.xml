<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardCornerRadius="3dp"
    app:cardElevation="5dp"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    app:layout_gravity="center_horizontal|center_vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/studyCatTV"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="#7E57C2"
            android:gravity="center_horizontal|center_vertical"
            android:text="Тест \nИероглиф - перевод"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/studyDescTV"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:background="#81D4FA"
            android:gravity="center_horizontal|center_vertical"
            android:text="Программа показывает иероглиф  и несколько вариантов перевода на выбор"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="12sp" />
    </LinearLayout>
</androidx.cardview.widget.CardView>